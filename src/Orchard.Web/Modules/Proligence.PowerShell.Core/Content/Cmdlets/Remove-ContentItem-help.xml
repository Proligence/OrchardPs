    <command:details>
      <command:name>Remove-ContentItem</command:name>
      <maml:description>
        <maml:para>Removes an Orchard content item.</maml:para>
      </maml:description>
      <maml:copyright>
        <maml:para></maml:para>
      </maml:copyright>
      <command:verb>Remove</command:verb>
